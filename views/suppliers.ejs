<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suppliers - MetroMart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Suppliers</h1>
            <a href="/suppliers/new" class="btn btn-primary">Add New Supplier</a>
        </div>

        <% if (suppliers && suppliers.length > 0) { %>
            <div class="row">
                <% suppliers.forEach(supplier => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><%= supplier.supplier_name %></h5>
                                <p class="card-text">
                                    <strong>Contact:</strong> <%= supplier.contact_person %><br>
                                    <strong>Mobile:</strong> <%= supplier.mobile %><br>
                                    <strong>Email:</strong> <%= supplier.email %><br>
                                    <strong>Status:</strong>
                                    <span class="badge <%= supplier.is_active ? 'bg-success' : 'bg-secondary' %>">
                                        <%= supplier.is_active ? 'Active' : 'Inactive' %>
                                    </span>
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="/suppliers/<%= supplier.supplier_id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                                <a href="/suppliers/<%= supplier.supplier_id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center mt-5">
                <p class="text-muted">No suppliers found.</p>
                <a href="/suppliers/new" class="btn btn-primary">Add First Supplier</a>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
