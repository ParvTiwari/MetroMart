<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Return - MetroMart</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container">
        <h1>Process New Return</h1>

        <form action="/returns" method="POST">
            <div class="form-group">
                <label for="invoice_num">Select Invoice:</label>
                <select name="invoice_num" id="invoice_num" required onchange="updateProducts()">
                    <option value="">Choose an invoice...</option>
                    <% if (invoices && invoices.length > 0) { %>
                        <% invoices.forEach(invoice => { %>
                            <option value="<%= invoice.invoice_num %>">
                                Invoice #<%= invoice.invoice_num %> - <%= invoice.customers ? invoice.customers.customer_name : 'Unknown Customer' %> (<%= new Date(invoice.invoice_timestamp).toLocaleDateString() %>)
                            </option>
                        <% }) %>
                    <% } else { %>
                        <option value="" disabled>No invoices available</option>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
                <label for="product_code">Select Product:</label>
                <select name="product_code" id="product_code" required>
                    <option value="">First select an invoice...</option>
                </select>
            </div>

            <div class="form-group">
                <label for="quantity_returned">Quantity to Return:</label>
                <input type="number" name="quantity_returned" id="quantity_returned" min="1" required>
            </div>

            <div class="form-group">
                <label for="return_reason">Return Reason:</label>
                <select name="return_reason" required>
                    <option value="">Select reason...</option>
                    <option value="Defective">Defective Product</option>
                    <option value="Wrong Item">Wrong Item Sent</option>
                    <option value="Not as Described">Not as Described</option>
                    <option value="Changed Mind">Customer Changed Mind</option>
                    <option value="Damaged in Transit">Damaged in Transit</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="refund_amount">Refund Amount ($):</label>
                <input type="number" name="refund_amount" step="0.01" min="0" required>
            </div>

            <div class="form-group">
                <label for="process_emp_id">Processed By:</label>
                <select name="process_emp_id" required>
                    <% employees.forEach(emp => { %>
                        <option value="<%= emp.emp_id %>"><%= emp.emp_name %></option>
                    <% }) %>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Process Return</button>
            <a href="/returns" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <script>
        const invoices = <%- JSON.stringify(invoices || []) %>;

        function updateProducts() {
            const invoiceSelect = document.getElementById('invoice_num');
            const productSelect = document.getElementById('product_code');
            const selectedInvoiceNum = invoiceSelect.value;

            // Clear current options
            productSelect.innerHTML = '<option value="">Choose a product...</option>';

            if (selectedInvoiceNum && invoices.length > 0) {
                const selectedInvoice = invoices.find(inv => inv.invoice_num == selectedInvoiceNum);
                if (selectedInvoice && selectedInvoice.sales_details && selectedInvoice.sales_details.length > 0) {
                    selectedInvoice.sales_details.forEach(detail => {
                        const option = document.createElement('option');
                        option.value = detail.product_code;
                        const productName = detail.products ? detail.products.product_name : 'Unknown Product';
                        const quantity = detail.quantity || 0;
                        const price = detail.selling_price || 0;
                        option.textContent = `${productName} (Sold: ${quantity}, Price: $${price})`;
                        productSelect.appendChild(option);
                    });
                } else {
                    productSelect.innerHTML = '<option value="" disabled>No products found for this invoice</option>';
                }
            }
        }
    </script>

    <%- include('../partials/footer') %>
</body>
</html>