<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Returns - MetroMart</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container">
    <h1 class="page-title">ðŸ“¦ Returns Management</h1>

    <div class="button-right">
      <a href="/returns/new" class="btn-primary">+ Process New Return</a>
    </div>

    <div class="table-section">
      <table class="styled-table">
        <thead>
          <tr>
            <th>Return ID</th>
            <th>Invoice #</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Qty Returned</th>
            <th>Reason</th>
            <th>Refund</th>
            <th>Date</th>
            <th>Processed By</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (returns && returns.length > 0) { %>
            <% returns.forEach(ret => { %>
              <tr>
                <td><%= ret.return_id %></td>
                <td><%= ret.invoice_num %></td>
                <td><%= ret.sales_invoices?.customers?.customer_name || 'Unknown' %></td>
                <td><%= ret.products?.product_name || 'Unknown Product' %></td>
                <td><%= ret.quantity_returned %></td>
                <td><%= ret.return_reason || '-' %></td>
                <td>â‚¹<%= (ret.refund_amount || 0).toFixed(2) %></td>
                <td><%= new Date(ret.return_date).toLocaleDateString() %></td>
                <td><%= ret.employees?.emp_name || 'Unknown' %></td>
                <td>
                  <a href="/returns/<%= ret.return_id %>" class="btn-secondary">View</a>
                  <a href="/returns/<%= ret.return_id %>/edit" class="btn-edit">Edit</a>
                  <form action="/returns/<%= ret.return_id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="btn-delete" onclick="return confirm('Delete this return record?')">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="10" style="text-align:center; color:#777; padding:20px;">No returns found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

   <%- include('partials/footer') %>
</body>
</html>
