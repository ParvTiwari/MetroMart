<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= supplier.supplier_name %> - MetroMart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><%= supplier.supplier_name %></h1>
      <div>
        <a href="/suppliers/<%= supplier.supplier_id %>/edit" class="btn btn-primary">Edit Supplier</a>
        <a href="/suppliers" class="btn btn-secondary">Back to Suppliers</a>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header">
            <h3>Supplier Information</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <p><strong>Supplier Name:</strong> <%= supplier.supplier_name %></p>
                <p><strong>Contact Person:</strong> <%= supplier.contact_person %></p>
                <p><strong>Mobile:</strong> <%= supplier.mobile %></p>
                <p><strong>Email:</strong> <%= supplier.email %></p>
              </div>
              <div class="col-md-6">
                <p><strong>Address:</strong><br><%= supplier.address %></p>
                <p><strong>Registration Date:</strong> <%= supplier.registration_date %></p>
                <p><strong>Status:</strong>
                  <span class="badge <%= supplier.is_active ? 'bg-success' : 'bg-secondary' %>">
                    <%= supplier.is_active ? 'Active' : 'Inactive' %>
                  </span>
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Supply Orders</h3>
            <span class="badge bg-info"><%= supplyOrders.length %> orders</span>
          </div>
          <div class="card-body">
            <% if (supplyOrders && supplyOrders.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Order #</th>
                      <th>Date</th>
                      <th>Items</th>
                      <th>Total Amount</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% supplyOrders.forEach(order => { %>
                      <tr>
                        <td><%= order.order_num %></td>
                        <td><%= order.order_date %></td>
                        <td><%= order.items_count %></td>
                        <td>₹<%= order.total_amount.toFixed(2) %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted">No supply orders found for this supplier.</p>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h4>Actions</h4>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              <a href="/suppliers/<%= supplier.supplier_id %>/edit" class="btn btn-outline-primary">Edit Supplier</a>
              <form action="/suppliers/<%= supplier.supplier_id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to deactivate this supplier?')">
                <button type="submit" class="btn btn-outline-danger w-100">Deactivate Supplier</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <hr class="my-4">
  <div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Create New Supply Order</h3>
    <span class="badge bg-info"><%= products.length %> products</span>
  </div>
  <div class="card-body">
    <form id="orderForm" class="mb-0">
      <div class="table-responsive">
        <table class="table table-striped table-bordered mb-0">
          <thead>
            <tr>
              <th>Product</th>
              <!-- <th>Stock</th> -->
              <th>Quantity</th>
              <th>Cost Price (₹)</th>
              <th>Add</th>
            </tr>
          </thead>
          <tbody id="productTable">
            <% products.forEach(p => { %>
              <tr>
                <td><%= p.products.product_name %></td>
                <td><input type="number" class="form-control qty" min="1" value="1"></td>
                <td>
                  <input
                    type="number"
                    class="form-control cost"
                    min="0.01"
                    step="0.01"
                    value="<%= Number(p.cost_price).toFixed(2) %>">
                </td>
                <td>
                  <button type="button" class="btn btn-sm btn-success addItem"
                    data-code="<%= p.product_code %>" data-name="<%= p.products.product_name %>">+</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <h5 class="mt-1">Added Items</h5>
      <ul id="addedItems" class="list-group mb-3"></ul>
      <button type="submit" class="btn btn-primary">Submit Order</button>
    </form>
  </div>
</div>

  <!-- SweetAlert2 for beautiful popups -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    const addedItems = [];
    const addedItemsList = document.getElementById('addedItems');

    document.querySelectorAll('.addItem').forEach(btn => {
      btn.addEventListener('click', e => {
        const row = e.target.closest('tr');
        const product_code = btn.dataset.code;
        const product_name = btn.dataset.name;
        const qtyEl = row.querySelector('.qty');
        const costEl = row.querySelector('.cost');

        const quantity = parseInt(qtyEl.value, 10);
        const cost_price = parseFloat(costEl.value);

        if (!Number.isFinite(quantity) || quantity <= 0 || !Number.isFinite(cost_price) || cost_price <= 0) {
          Swal.fire({
            icon: 'warning',
            title: 'Invalid Entry',
            text: 'Please enter a valid quantity and cost price (decimals allowed).'
          });
          return;
        }

        addedItems.push({
          product_code,
          product_name,
          quantity,
          cost_price: Math.round(cost_price * 100) / 100
        });

        renderItems();
      });
    });

    function renderItems() {
      addedItemsList.innerHTML = '';
      addedItems.forEach((item, idx) => {
        const li = document.createElement('li');
        li.className = 'list-group-item d-flex justify-content-between align-items-center';
        li.innerHTML = `
          <div>
            <strong>${item.product_name}</strong>
            <div class="text-muted small">Qty: ${item.quantity} • Cost: ₹${item.cost_price.toFixed(2)}</div>
          </div>
          <div>
            <button class="btn btn-sm btn-outline-danger removeItem" data-idx="${idx}">Remove</button>
          </div>
        `;
        addedItemsList.appendChild(li);
      });

      document.querySelectorAll('.removeItem').forEach(b => {
        b.addEventListener('click', e => {
          const idx = Number(e.target.dataset.idx);
          if (!Number.isNaN(idx)) {
            addedItems.splice(idx, 1);
            renderItems();
          }
        });
      });
    }

    document.getElementById('orderForm').addEventListener('submit', async e => {
      e.preventDefault();

      if (addedItems.length === 0) {
        Swal.fire({
          icon: 'info',
          title: 'No Items Added',
          text: 'Please add at least one product before submitting the order.'
        });
        return;
      }

      const payloadItems = addedItems.map(i => ({
        product_code: i.product_code,
        product_name: i.product_name,
        quantity: Number(i.quantity),
        cost_price: Number((Math.round(i.cost_price * 100) / 100).toFixed(2))
      }));

      const response = await fetch('/suppliers/<%= supplier.supplier_id %>/orders', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ items: payloadItems })
      });

      if (response.ok) {
        const totalItems = payloadItems.reduce((s, it) => s + it.quantity, 0);
        const totalCost = payloadItems.reduce((s, it) => s + (it.quantity * it.cost_price), 0).toFixed(2);

        Swal.fire({
          icon: 'success',
          title: 'Order Placed Successfully!',
          html: `
            <p>Your supply order has been recorded.</p>
            <p><strong>Total Items:</strong> ${totalItems}</p>
            <p><strong>Total Cost:</strong> ₹${totalCost}</p>
          `,
          showConfirmButton: false,
          timer: 2500,
          timerProgressBar: true
        });

        setTimeout(() => window.location.reload(), 2600);
      } else {
        const errText = await response.text().catch(() => null);
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: errText || 'Something went wrong while placing the order. Please try again.'
        });
      }
    });
  </script>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
